{
    "name": "phaldan/discourse",
    "description": "Discourse SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Daniels",
            "email": "philipp.daniels@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "~1.1",
        "phpunit/phpunit": "~6.1",
        "sebastian/phpcpd": "^3.0",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpmd/phpmd": "^2.6",
        "vimeo/psalm": "^0.3.41",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "PhALDan\\Discourse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhALDan\\Discourse\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": "vendor/bin/cghooks update",
        "post-update-cmd": "vendor/bin/cghooks update",
        "pre-commit": [
            "php --version && ",
            "composer --version && ",
            "composer validate && ",
            "vendor/bin/parallel-lint tests src && ",
            "vendor/bin/phpcpd -n src/ tests/ && ",
            "vendor/bin/psalm --find-dead-code && ",
            "vendor/bin/phpmd src text .phpmd.xml && ",
            "vendor/bin/php-cs-fixer fix && ",
            "vendor/bin/phpunit --coverage-text"
        ]
    }
}
